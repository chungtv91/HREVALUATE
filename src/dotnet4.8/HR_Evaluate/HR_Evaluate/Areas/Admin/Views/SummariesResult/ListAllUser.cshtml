@model IEnumerable<HR_Evaluate.Models.ListEvaluated>
@{
    ViewBag.Title = "ListAllUser";
}

<link href="~/Content/bootstrap.css" rel="stylesheet" />
<h2>List All User</h2>

<div class="table-responsive">
    <table class="table table-hover table-bordered">
        <tr style="text-align:center">
            <th style="text-align:center">
                code
            </th>
            <th style="text-align:center">
                Name
            </th>
            <th style="text-align:center">
                Image
            </th>
            <th style="text-align:center">
                Department
            </th>
            <th style="text-align:center">
                Current Position
            </th>
            <th style="text-align:center">
                Current Grade
            </th>
          
            <th style="text-align:center">
                Evaluate<br />
                View / Edit
            </th>
            @*<th style="text-align:center">
                    Status
                </th>*@
        </tr>
        @foreach (var item in Model)
        {
            <tr style="text-align:center">

                <td class="fw-bold">
                    @item.Code
                </td>

                <td class="fw-bold">
                    @item.Name
                </td>

                <td>
                    @if (!string.IsNullOrEmpty(item.Img))
                    {
                        <img src="@Url.Content(item.Img)" />
                    }
                </td>

                <td class="fw-bold">
                    @item.DepartmentName
                </td>
                <td class="fw-bold">
                    @item.PositionName
                </td>
                <td class="fw-bold">
                    @item.LevelName
                </td>
                <td class="fw-bold">
                    @Html.ActionLink("Evaluate Result ", "Index", new { id = @item.Id })
                </td>
            </tr>
        }
    </table>
</div>